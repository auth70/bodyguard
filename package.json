  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "license": "MIT",
  "dependencies": {
    "@exact-realty/multipart-parser": "^1.0.10",
    "@streamparser/json": "^0.0.18"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "tsm": "^2.3.0",
    "typescript": "^5.3.3",
    "uvu": "^0.5.6"
